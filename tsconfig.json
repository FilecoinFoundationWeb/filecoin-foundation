{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/app/*"],
      "@/components/*": ["./src/app/_components/*"],
      "@/content/*": ["./src/content/*"],
      "@/styles/*": ["./src/app/_styles/*"],
      "@/types/*": ["./src/app/_types/*"],
      "@/utils/*": ["./src/app/_utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/_types/**/*.d.ts",
    "src/app/events/[slug]"
  ],
  "exclude": ["node_modules"]
}
